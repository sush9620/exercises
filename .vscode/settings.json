{
    "editor.formatOnSave": true,
    "python.formatting.provider": "black",
    "isort.args": [
        "--profile",
        "black"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "ansible.python.interpreterPath": "/usr/bin/python3"
}